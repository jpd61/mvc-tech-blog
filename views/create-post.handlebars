<section>
  <h2 class="title">Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input class="input" type="text" id="post-title" name="post-title" placeholder="Blog Title"/>
    </div>
    <div>
      <label for="post-content">Content</label>
      <input class="textarea is-large" id="post-content" name="post-content" placeholder="Blog Content"/>
    </div>
    <button type="submit" class="button is-success is-pulled-right">Create Post</button>
  </form>
</section>

<script src="/javascript/add-post.js"></script>